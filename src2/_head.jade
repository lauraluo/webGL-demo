block pageinfo
    - var page = { title: '一起來玩WebGL',desc:'一直玩一直玩一直玩',image:'http://lauraluo.github.io/particleDemo/dist/images/2016-06-02_202130.jpg' }

html
    head    
        //- TODO: Check if it's the good charset
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='edge,chrome=1')
        title #{page.title}
        meta(name='description', content='#{page.desc}')
        meta(name='viewport', content='width=640')

        // Schema.org markup for Google+
        meta(itemprop="name" content="#{page.title}")
        meta(itemprop="description" content="#{page.desc}")
        meta(itemprop="image" content="#{page.image}")

        // og
        meta(property="og:title" content="#{page.title}")
        meta(property="og:description" content="#{page.desc}")
        meta(property="og:site_name" content="一起來玩WebGL")
        meta(property="og:type" content="article")
        meta(property="og:image" content="#{page.image}")

        //- TODO : Place favicon.ico and apple-touch-icon.png in the root directory
